<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App6.Views.PageTwo">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="¡Bienvenido ABCDE!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Esta es la pantalla de menú principal"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Detalles de usuario" Command="{Binding GoToDetailsCommand}" />
            <Button Text="Cerrar Sesión" Command="{Binding GoToRootCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>